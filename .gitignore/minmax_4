#include <iostream>

using namespace std;

int maxmin(int*arr, int first, int last)
{
	int min = arr[0];
	int index = first;
	
	for(; first<last;++first)
	{
		if(arr[first]<min)
	{	 
		min=arr[first];
		index=first;
	}
	}
	return index;

}

int main()
{
	int array[5]{3,4,5,9,1};
	cout<<maxmin(array,0,5);
	return 0;
}
