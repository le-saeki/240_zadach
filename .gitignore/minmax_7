#include <iostream>
using namespace std;

int per_max(int*arr, int first, int last)
{

	int max = arr[0];
	int index=first;
	
	for(; first<last;++first)
	{
		if(arr[first]>max)
	{	 
		max=arr[first];
		index=first;
	}
	}
	return index ;

}

int posl_min(int*arr, int first, int last)
{
	int min = arr[0];
	int index = first;
	for(; first<last;++first)
	{
		if(arr[first]>min)
	{	 
		min=arr[first];
		index=first;
	}
	}
	return index;
}

int main()
{
	int array[5]{24,2,1,4,3};
	cout<<per_max(array,0,5)<<endl;
	cout<<posl_min(array,0,5);
	return 0;
}
