#include <iostream>
using namespace std;

int posl_min(int*arr, int first, int last)
{

	int min = arr[0];
	int index = first;
	
	for(; first<last;++first)
	{
		if(arr[first]>min)
	{	 
		min=arr[first];
		index = first;
	}
	}
	return index ;

}

int main()
{
	int array[5]{24,2,6,84,3};
	cout<<posl_min(array,0,5)<<endl;
	return 0;
}
