#include <iostream>
#include <cmath>
using namespace std;
using UP=bool(*)(int);

bool f(int a)
{return a%2==0;}

int arr(int*arr, int first, int last, UP p)
{
	int temp=0;
	for(;first>=last;--first)
	{
		if((p)(arr[first]))
		{
			++temp;
		cout<<arr[first];
	}
}
cout<<" k:";
return temp;
}
int main()
{
	int array[8]{1,2,3,4,5,6,7,8};
	cout<<arr(array,7,0,f);
	return 0;
}
